{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@flight-workspace/logger-lib": ["libs/logger-lib/src/index.ts"],
      "@flight-workspace/flight-lib": ["libs/flight-lib/src/index.ts"],
      "@flight-workspace/dashboard-lib": ["libs/dashboard-lib/src/index.ts"],
      "@flight-workspace/luggage/domain": ["libs/luggage/domain/src/index.ts"],
      "@flight-workspace/luggage/feature-checkin": [
        "libs/luggage/feature-checkin/src/index.ts"
      ],
      "@flight-workspace/luggage/feature-report-loss": [
        "libs/luggage/feature-report-loss/src/index.ts"
      ],
      "@flight-workspace/boarding/domain": [
        "libs/boarding/domain/src/index.ts"
      ],
      "@flight-workspace/boarding/feature-manage": [
        "libs/boarding/feature-manage/src/index.ts"
      ],
      "@flight-workspace/checkin/domain": ["libs/checkin/domain/src/index.ts"],
      "@flight-workspace/checkin/feature-manage": [
        "libs/checkin/feature-manage/src/index.ts"
      ],
      "@flight-workspace/checkin/feature-upgrade": [
        "libs/checkin/feature-upgrade/src/index.ts"
      ],
      "@flight-workspace/checkin2/domain": [
        "libs/checkin2/domain/src/index.ts"
      ],
      "@flight-workspace/checkin2/feature-upgrade": [
        "libs/checkin2/feature-upgrade/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
